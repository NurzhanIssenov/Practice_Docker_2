2 # Python Dockerfile
3 #
4 # https://github.com/dockerfile/python
5 #
6
7 # Pull base image.
8 FROM ubuntu:20.04
9
10
11 # Install Python.
12
13 RUN apt-get update && apt-get install -y python && apt clean
14
15 # Define working directory.
16 WORKDIR /root/my_project/app.py
17
18 # Define default command.
19 CMD ["bash"]
